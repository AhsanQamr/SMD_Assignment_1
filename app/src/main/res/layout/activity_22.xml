<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activity22">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="90dp"
            android:background="@drawable/edit" />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:src="@drawable/circle_pf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#fcfc03"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:textSize="27dp"
        android:textColor="#fcfc03"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist: 4"
        android:textSize="27dp"
        android:textColor="#fcfc03"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Songs: 4"
        android:textSize="27dp"
        android:textColor="#fcfc03"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="bottom"
            app:itemIconTint="#fcfc03"
            app:itemTextColor="#fcfc03"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu" />
        <!-- this label visibility mode if removed then one item shown at a time -->

    </FrameLayout>




</LinearLayout>