<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activity17">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:src="@drawable/back"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleField"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:paddingLeft="0dp"
            android:paddingRight="20dp"
            android:textColorHint="#Cbc115"
            android:layout_height="wrap_content"
            android:hint="Search ">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="309dp"
                android:layout_height="67dp"
                android:background="@color/white"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Searches"
        android:textSize="25dp"
        android:textColor="#fcfc03"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="146dp"
                android:layout_height="98dp"
                android:src="@drawable/despacito" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Song Name"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginTop="9dp"
                    android:text="Artist"
                    android:textColor="#fcfc03"
                    android:textSize="17dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="69dp"
                android:layout_height="59dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:src="@drawable/cross" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="146dp"
            android:layout_height="98dp"
            android:src="@drawable/playlist" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist Name"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="9dp"
                android:text="Artist"
                android:textColor="#fcfc03"
                android:textSize="17dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="69dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:src="@drawable/cross" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="146dp"
            android:layout_height="98dp"
            android:src="@drawable/playlist" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist Name"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="9dp"
                android:text="Artist"
                android:textColor="#fcfc03"
                android:textSize="17dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="69dp"
            android:layout_height="59dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:src="@drawable/cross" />

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            app:labelVisibilityMode="labeled"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_navigation_menu"
            app:itemIconTint="#fcfc03"
            android:layout_width="match_parent"
            app:itemTextColor="#fcfc03"
            android:layout_height="65dp"/>
        <!-- this label visibility mode if removed then one item shown at a time -->

    </FrameLayout>




</LinearLayout>