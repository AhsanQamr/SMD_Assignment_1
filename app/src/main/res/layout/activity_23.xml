<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activity23">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/save_profile"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="#fcfc03"
            android:layout_marginLeft="30dp"
            android:background="?selectableItemBackground" />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:src="@drawable/circle_pf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#fcfc03"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_23Field"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColorHint="#Cbc115"
        android:layout_height="wrap_content"
        app:endIconDrawable="@drawable/edit"
        app:errorIconDrawable="@drawable/edit"


        android:hint="abcd@abcd.com ">

        <com.google.android.material.textfield.TextInputEditText
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="#fcfc03"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pswd_23Field"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColorHint="#Cbc115"
        android:layout_height="wrap_content"
        android:hint="**** ">

        <com.google.android.material.textfield.TextInputEditText
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="bottom"
            app:itemIconTint="#fcfc03"
            app:itemTextColor="#fcfc03"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navigation_menu" />
        <!-- this label visibility mode if removed then one item shown at a time -->

    </FrameLayout>

</LinearLayout>